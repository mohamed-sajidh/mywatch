<script>
  function removeCoupen(coupenId) {

    $.ajax({
      url: `/admin/delete-coupen/${coupenId}`,
      method: 'GET',
      success: (response) => {
        Swal.fire(
          'Are you sure?',
          'You want to delete this!',
          'warning'
        ).then((result) => {
          if (result.isConfirmed) {
            location.reload()
          }
        })


        console.log("response")
      }
    })
  }
</script>



